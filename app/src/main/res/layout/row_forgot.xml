<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_290sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardForgotDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_bg"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/ivForgotClose"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/icon_cancel" />

        <LinearLayout
            android:id="@+id/lnvForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="FORGOT YOUR PASSWORD?"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/login_underline" />

            <TextView
                android:padding="@dimen/_10sdp"
                android:text="Enter Your Email Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <EditText
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/icon_email"
                android:id="@+id/edtForgotEmail"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />

            <Button
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/btnForgotChange"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/btn_change_password"
                android:text="Change Password"
                android:textAllCaps="false"
                android:textColor="@color/bpWhite" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>