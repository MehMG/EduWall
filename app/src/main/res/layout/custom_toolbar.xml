<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">


        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin10"
            android:paddingRight="@dimen/margin10"
            android:src="@drawable/icon_back"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin10"
            android:paddingRight="@dimen/margin10"
            android:src="@drawable/icon_home"
            android:visibility="gone" />


        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="Home"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgLogout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin03"
            android:paddingRight="@dimen/margin10"
            android:src="@drawable/icon_logout"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgSave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin03"
            android:paddingRight="@dimen/margin10"
            android:src="@drawable/icon_done"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgSendEmail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin03"
            android:paddingRight="@dimen/margin10"
            android:src="@drawable/icon_send"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgNewJoin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin03"
            android:paddingRight="@dimen/margin10"
            android:src="@drawable/icon_plus"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgTask"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin03"
            android:paddingRight="@dimen/margin10"
            android:src="@drawable/icon_task"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgReply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin03"
            android:paddingRight="@dimen/margin10"
            android:src="@drawable/icon_replay_small"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin03"
            android:paddingRight="@dimen/margin10"
            android:src="@drawable/icon_delete_small"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin10"
            android:src="@drawable/icon_notification"
            android:visibility="gone" />


        <TextView
            android:id="@+id/txtAddPostButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/_15sdp"
            android:text="Add"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtPost"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/_15sdp"
            android:text="Post"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>
</android.support.v7.widget.Toolbar>



