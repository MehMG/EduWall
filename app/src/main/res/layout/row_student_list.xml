<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_3sdp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp">


        <LinearLayout
            android:id="@+id/lnvParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                android:id="@+id/ivStudentListProfile"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:src="@drawable/profile_image"
                app:siShape="@drawable/shape_rounded_rectangle"
                app:siSquare="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Text_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Index No:"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtIndexNo"
                        style="@style/Text_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="SCE1234567890" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtStudentName"
                        style="@style/Text_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student Name1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Text_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grade:"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtGrade"
                        style="@style/Text_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="A+" />

                    <TextView
                        android:id="@+id/txtMarks"
                        style="@style/Text_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="4/5" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:visibility="visible"
                android:id="@+id/btnSuspend"
                android:layout_width="80sp"
                android:layout_height="25sp"
                android:background="@drawable/btn_red"
                android:text="Suspend"
                android:textAllCaps="false" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>