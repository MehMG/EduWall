<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eduwall.Student.Activity.NewJoinActivity">

    <include layout="@layout/custom_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_6sdp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_20sdp">

                    <TextView
                        style="@style/Text_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="Select Country"
                        android:textColor="@color/colorPrimary" />

                    <Spinner
                        android:layout_marginTop="@dimen/_2sdp"
                        android:id="@+id/spinnerCountry"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@null"></Spinner>

                    <TextView
                        style="@style/Text_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="Select Institute"
                        android:textColor="@color/colorPrimary" />

                    <Spinner
                        android:layout_marginTop="@dimen/_2sdp"
                        android:id="@+id/spinnerInstitute"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@null"></Spinner>

                    <TextView
                        style="@style/Text_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="Student Name"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/edtStudentName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/custom_edittext"
                        android:drawablePadding="@dimen/_5sdp"
                        android:hint="Student Name"
                        android:inputType="text"
                        android:padding="@dimen/_8sdp" />

                    <!--<TextView-->
                        <!--style="@style/Text_medium"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:paddingTop="@dimen/_3sdp"-->
                        <!--android:text="Program"-->
                        <!--android:textColor="@color/colorPrimary" />-->

                    <!--<EditText-->
                        <!--android:id="@+id/edtProgram"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="@dimen/_35sdp"-->
                        <!--android:layout_marginBottom="@dimen/_5sdp"-->
                        <!--android:layout_marginTop="@dimen/_2sdp"-->
                        <!--android:background="@drawable/custom_edittext"-->
                        <!--android:hint="Program"-->
                        <!--android:inputType="text"-->
                        <!--android:maxLength="13"-->
                        <!--android:padding="@dimen/_8sdp" />-->

                    <TextView
                        style="@style/Text_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="Index Number"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/edtIndexNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/custom_edittext"
                        android:hint="Index Number"
                        android:inputType="text"
                        android:padding="@dimen/_8sdp" />

                    <Button
                        android:id="@+id/btnSendRequest"
                        style="@style/btn"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_30sdp"
                        android:background="@drawable/login_btn"
                        android:text="Send Request"
                        android:textAllCaps="false" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
