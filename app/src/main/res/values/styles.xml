<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="FloatAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:minWidth">@dimen/_200sdp</item>
    </style>


    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:drawableRight">@drawable/down_arrow</item>

    </style>


    <style name="AppTheme.FloatingAccentButtonOverlay">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="spinnerRegistration" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:drawableLeft">@drawable/icon_username</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="btn">
        <item name="android:textColor">@color/white</item>"
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="edtstyle">
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ivlogo">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">@dimen/_100sdp</item>
        <item name="android:layout_width">@dimen/_120sdp</item>
    </style>

    <style name="Text_large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text_medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text_small">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="tab_text">
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="green_dropdown">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/green_header_bg</item>
    </style>

</resources>
